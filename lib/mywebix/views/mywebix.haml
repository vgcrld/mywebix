        { cols: [
          { view: "form", id: "myform", width: 300, elements: [
            { view: "text", name: "title", placeholder: "Title", width: 250, align: "center" },
            { view: "text", name: "year",  placeholder: "Title", width: 250, align: "center" } ],
          },
          { view: "resizer" },
          { view: "text", align: "left" } ]
        }

      ]

    });
