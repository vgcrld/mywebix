  %body
    %h1 My Testing Area
    #container1

:javascript
  webix.ready(function() {

    //webix.ajax().get("fromserver", {}, function(text,xml,xhr) { fromserver=text });
    fromserver = webix.ajax("fromserver");

    webix.ui({

      container: "container1",

      rows: [

        { view: "toolbar", id: "mybar", elements: [
          { view: "button", value: "Add", width: 70 },
          { view: "button", value: "Delete", width: 70 },
          { view: "button", value: "Update", width: 70 },
          { view: "button", value: "Clear Form", width: 85 } ]
